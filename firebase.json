{
  "hosting": [ 
    {
    "target": "prod",
    "public": "hugo/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/quickcheck.html",
        "destination": "/quickcheck/",
        "type": 302
      },
      {
        "source": "/performance.html:querystring*",
        "destination": "/quickcheck/2019/results/:querystring",
        "type": 302
      }
    ]
  },
  {
    "target": "draft",
    "public": "hugo/draft",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/quickcheck.html",
        "destination": "/quickcheck/",
        "type": 302
      },
      {
        "source": "/performance.html:querystring*",
        "destination": "/quickcheck/2019/results/:querystring",
        "type": 302
      }
    ]
  } 
],
  "emulators": {
    "hosting": {
      "port": 6001
    },
    "ui": {
      "enabled": true,
      "port": 6002
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 6100
    }
  }
}
